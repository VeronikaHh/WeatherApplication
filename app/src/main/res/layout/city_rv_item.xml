<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="15dp"
    android:layout_margin="5dp"
    app:cardElevation="5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/day_bg"
        >

        <TextView
            android:id="@+id/idTVLocation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="5dp"
            android:text="My location"
            android:textColor="@color/white"
            android:textSize="25sp" />
        <TextView
            android:id="@+id/idTVTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/idTVLocation"
            android:textColor="@color/white"
            android:text="15:45"
            android:layout_marginStart="10dp"
            />
        <TextView
            android:id="@+id/idTVDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/idTVTime"
            android:textColor="@color/white"
            android:text="Clear sky"
            android:textSize="20sp"
            android:paddingTop="5dp"
            android:layout_margin="10dp"
            />
        <TextView
            android:id="@+id/idTVTemp"
            android:layout_alignRight="@id/idTVLocation"
            android:paddingTop="5dp"
            android:layout_margin="10dp"
            android:textSize="40sp"
            android:textColor="@color/white"
            android:text="24 °"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        </TextView>
        <TextView
            android:id="@+id/idTVTempL"
            android:layout_toLeftOf="@+id/idTVTempH"
            android:layout_below="@id/idTVTemp"
            android:paddingTop="5dp"
            android:layout_margin="10dp"
            android:textSize="15sp"
            android:textColor="@color/white"
            android:text="L: 14 °"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        </TextView>
        <TextView
            android:id="@+id/idTVTempH"
            android:layout_alignParentRight="true"
            android:paddingTop="5dp"
            android:layout_margin="10dp"
            android:textSize="15sp"
            android:layout_below="@id/idTVTemp"
            android:textColor="@color/white"
            android:text="H: 28 °"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        </TextView>
    </RelativeLayout>
</androidx.cardview.widget.CardView>